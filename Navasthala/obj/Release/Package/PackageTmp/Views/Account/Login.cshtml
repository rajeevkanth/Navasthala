@model DataLayer.Models.LoginModel

@{
    ViewBag.Title = "Please authenticate yourself";
}


<div class="page-region-content fg-color-white">
    
    <h3 class="fg-color-white icon-key"> @ViewBag.Title.</h3>
    <br>
    <section id="login-form">
        @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) 
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            
                        @Html.LabelFor(m => m.UserName)
                        @Html.TextBoxFor(m => m.UserName)
                        @Html.ValidationMessageFor(m => m.UserName)
                        <br>   
             
                        @Html.LabelFor(m => m.Password)
                        @Html.PasswordFor(m => m.Password)
                        @Html.ValidationMessageFor(m => m.Password)
               
               <input type="submit" id="submit-button" value="Log in" />
            <p>
                @Html.ActionLink("Register", "Register") if you don't have an account.
            </p>
        }
    </section>
    
</div>

